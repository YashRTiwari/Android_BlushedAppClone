<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.emoji.widget.EmojiTextView
            android:id="@+id/tvLMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_chat_you"
            android:fontFamily="@font/montserratregular"
            android:maxWidth="250dp"
            android:padding="10dp"
            android:text="Left"
            android:textColor="@android:color/white" />

        <FrameLayout
            android:id="@+id/flLImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:background="@color/you"
            android:padding="2dp"
            >

            <ImageView
                android:id="@+id/ivL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitEnd"
                android:maxWidth="200dp"
                android:maxHeight="200dp"
                android:layout_gravity="end"
                android:adjustViewBounds="true"
                android:minHeight="100dp"
                android:minWidth="100dp"
                />
            <ProgressBar
                android:id="@+id/pgL"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"/>

        </FrameLayout>

        <androidx.emoji.widget.EmojiTextView
            android:id="@+id/tvRMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvLMessage"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:maxWidth="250dp"
            android:text="Right"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_chat_me"
            android:fontFamily="@font/montserratregular"
            android:layout_marginRight="10dp" />



        <FrameLayout
            android:id="@+id/flRImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:background="@color/you"
            android:padding="2dp">

            <ImageView
                android:id="@+id/ivR"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitEnd"
                android:layout_gravity="end"
                android:maxWidth="200dp"
                android:maxHeight="200dp"
                android:minHeight="100dp"
                android:minWidth="100dp"
                android:adjustViewBounds="true"
                />

            <ProgressBar
                android:id="@+id/pgR"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"/>

        </FrameLayout>

        <TextView
            android:id="@+id/tvMiddle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textAlignment="center"
            android:visibility="visible"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            android:fontFamily="@font/sourcesansproregular"
            />

    </RelativeLayout>

</layout>